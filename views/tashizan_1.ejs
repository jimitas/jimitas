<!DOCTYPE html>
<html lang="ja">

<head>
  <%- include("./_share/metadata.ejs") %>
    <title>Jimitas</title>
    <%- include("./_share/stylesheets.ejs") %>
</head>

<body>
  <!-- header -->
  <%- include("./_share/navbar.ejs") %>
    <div class="outerframe">
      <h1 class="mt-3 text-center">
        <%= title %>
      </h1>
      <!-- main -->
      <main role="main" class="container">
        <div class="mx-auto">
          <div class="mb-1" style="text-align: right;">
            <button class="btn btn-primary" id="question">もんだい</button>
            <button class="btn btn-primary" id="shiki_set">しきを「せっと」</button>
            <button class="btn btn-secondary" id="show_answer">こたえを　みる</button>
          </div>
          <select id="form-select" class="form-select bg-light mb-2">
            <option value="1" checked>10までのかず</option>
            <option value="2" checked>10＋□，□＋10</option>
            <option value="3" checked>１□＋□，□＋１□</option>
            <option value="4">20までのたしざん</option>
          </select>
          <input id="calc_L" class="calc" type="number" name="number" max="20" min="0" step="1" />
          <span class="calc">＋</span>
          <input id="calc_R" class="calc" type="number" name="number" max="20" min="0" step="1" />
          <span class="calc">＝</span>
          <input id="calc_result" class="calc" type="number" name="number" max="20" min="0" step="1" />
          <h4 id="text_box" class="alert alert-light text-center"></h4>
          <section id="UP" style="display:flex;">
            <table class="table" id="TBL_A">
            </table>
            <table class="table" id="TBL_B">
            </table>
          </section>
          <div id="field" class="d-flex flex-wrap w-100 mt-3 bg-light">
          </div>
          <div id="response" class="mt-1 text-left" role="group" aria-label="Basic example">
            <div class="mb-1">
              <button id="btn0" class="btn btn-secondary">0</button>
              <button id="btn1" class="btn btn-secondary">1</button>
              <button id="btn2" class="btn btn-secondary">2</button>
              <button id="btn3" class="btn btn-secondary">3</button>
              <button id="btn4" class="btn btn-secondary">4</button>
              <button id="btn5" class="btn btn-secondary">5</button>
              <button id="btn6" class="btn btn-secondary">6</button>
              <button id="btn7" class="btn btn-secondary">7</button>
              <button id="btn8" class="btn btn-secondary">8</button>
              <button id="btn9" class="btn btn-secondary">9</button>
              <button id="btn10" class="btn btn-secondary">10</button>
            </div>
            <div>
              <button id="btn11" class="btn btn-secondary">11</button>
              <button id="btn12" class="btn btn-secondary">12</button>
              <button id="btn13" class="btn btn-secondary">13</button>
              <button id="btn14" class="btn btn-secondary">14</button>
              <button id="btn15" class="btn btn-secondary">15</button>
              <button id="btn16" class="btn btn-secondary">16</button>
              <button id="btn17" class="btn btn-secondary">17</button>
              <button id="btn18" class="btn btn-secondary">18</button>
              <button id="btn19" class="btn btn-secondary">19</button>
              <button id="btn20" class="btn btn-secondary">20</button>
            </div>
          </div>
          <div class="mt-1" style="display:flex;justify-content: right;">
            <div id="score-point"></div>
            <div>
              <button id="next" class="btn btn-success">つぎの　もんだいへ</button>
            </div>
          </div>
        </div>
        <div id="score-field"></div>
      </main>
      <%- include("./_share/footer.ejs") %>
    </div>
    <%- include("./_share/javascripts.ejs") %>
      <script src="/javascripts/tashizan_1.js"></script>
</body>

</html>