<!DOCTYPE html>
<html lang="ja">

<head>
  <%- include("./_share/metadata.ejs") %>
    <title>Jimitas</title>
    <%- include("./_share/stylesheets.ejs") %>
</head>

<body>
  <!-- header -->
  <%- include("./_share/navbar.ejs") %>
    <div class="outerframe">
      <h1 class="mt-3 text-center">
        <%= title %>
      </h1>
      <!-- main -->
      <main role="main" class="container">
        <h3 id="message" class="my-2 text-center"></h3>
        <div class="mx-auto">
          <div class="d-flex justify-content-center mr-5">
            <select onchange="select_change()" id="form-select" style="width:25vw" class="form-select bg-light mb-2 mx-2">
              <option value="1" checked>10までのかず</option>
              <option value="2" checked>10－□</option>
              <option value="3" checked>１□－□</option>
              <option value="4">くりさがり　あり</option>
            </select>
            <button onclick="countReset()" class="mx-2 btn btn-danger">りせっと</button>
            <button onclick="countStart()" class="mx-2 btn btn-primary" id="start">スタート</button>
            <button onclick="countStop()" class="mx-2 btn btn-secondary" id="stop">ストップ</button>
            <div id="time" class="ms-2">
              <div id="count_up_timer"></div>
            </div>
          </div>
          <div id="flush_card" class="mt-2 d-flex mx-auto px-auto">
            <div style="width:30%;" id="left"></div>
            <div style="width:10%;">-</div>
            <div style="width:20%;" id="mid"></div>
            <div style="width:10%;">=</div>
            <div style="width:30%;" id="kotae">?</div>
          </div>
          <div id="response" class="mt-1 text-center" role="group" aria-label="Basic example">
            <div class="mb-1">
              <% for (var i=0; i < 11; i++) { %>
                <button onclick="res(event)" ontouchstart="res(event)" style="width:54px;height: 48px;font-size: 24px;" class="btn btn-secondary m-1">
                  <%= i %>
                </button>
                <% } %>
                  <br>
                  <% for (var i=11; i < 21; i++) { %>
                    <button onclick="res(event)" ontouchstart="res(event)" style="width:60px;height: 48px;font-size: 24px;" class="btn btn-secondary m-1">
                      <%= i %>
                    </button>
                    <% } %>
            </div>
          </div>
          <div class="mt-1" style="display:flex;justify-content: right;">
            <div class="mx-2" id="score-point"></div>
            <div>
              <button id="next" onclick="next_send()" ontouchstart="next_start()" class="btn btn-success">つぎ</button>
            </div>
          </div>
        </div>
        <div id="score-field"></div>
      </main>
      <%- include("./_share/footer.ejs") %>
    </div>
    <%- include("./_share/javascripts.ejs") %>
      <script src="/javascripts/hiku_flush.js"></script>
</body>

</html>