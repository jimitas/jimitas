<!DOCTYPE html>
<html lang="ja">

<head>
  <%- include("./_share/metadata.ejs") %>
    <title>Jimitas</title>
    <%- include("./_share/stylesheets.ejs") %>
</head>

<body>
  <!-- header -->
  <%- include("./_share/navbar.ejs") %>
    <div class="outerframe">
      <h1 class="mt-3 text-center">
        <%= title %>
      </h1>
      <!-- main -->
      <main role="main" class="container">
        <div class="w-75 mx-auto">
          <select id="form-select" class="form-select bg-light">
            <option value=5 checked>５までのかず</option>
            <option value=6>６までのかず</option>
            <option value=7>７までのかず</option>
            <option value=8>８までのかず</option>
            <option value=9>９までのかず</option>
            <option value=10>10までのかず</option>
          </select>
          <h4 id="text_box" class="alert alert-light text-center"></h4>
          <div id="field" class="d-flex flex-wrap w-100 mt-3 bg-light">
          </div>
          <div id="response" class="mt-3 text-center" role="group" aria-label="Basic example">
            <button id="btn1" class="btn btn-secondary">1</button>
            <button id="btn2" class="btn btn-secondary">2</button>
            <button id="btn3" class="btn btn-secondary">3</button>
            <button id="btn4" class="btn btn-secondary">4</button>
            <button id="btn5" class="btn btn-secondary">5</button>
            <button id="btn6" class="btn btn-secondary">6</button>
            <button id="btn7" class="btn btn-secondary">7</button>
            <button id="btn8" class="btn btn-secondary">8</button>
            <button id="btn9" class="btn btn-secondary">9</button>
            <button id="btn10" class="btn btn-secondary">10</button>
          </div>
          <div class="mt-3" style="display: flex;justify-content: right;">
            <div id="score-point"></div>
            <button id="next" type="button" class="btn btn-success">つぎの　もんだいへ</button>
          </div>
        </div>
        <div id="score-field"></div>
      </main>
      <%- include("./_share/footer.ejs") %>
    </div>
    <%- include("./_share/javascripts.ejs") %>
      <script src="/javascripts/ikutukana.js"></script>
</body>

</html>